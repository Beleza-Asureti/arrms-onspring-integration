# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=dev
LOG_LEVEL=INFO

# Onspring Configuration
ONSPRING_API_URL=https://api.onspring.com
ONSPRING_API_KEY_SECRET=/arrms-integration/onspring/api-key

# ARRMS Configuration
ARRMS_API_URL=https://demo.preview.asureti.com
ARRMS_API_KEY_SECRET=/arrms-integration/arrms/api-key

# AWS Configuration
AWS_REGION=us-east-1

# Operational Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
BATCH_SIZE=100

# AWS Lambda Powertools
POWERTOOLS_SERVICE_NAME=arrms-onspring-integration
POWERTOOLS_METRICS_NAMESPACE=ARRMSIntegration
